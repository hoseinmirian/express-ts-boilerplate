<% contentFor('header') %>
<%- include('../partials/header') %>
<main>
    <h2><%= locals?.title %></h2>
    <form action="/login" method="POST" class="form--login">
        <label for="email">Email/UserName:</label>
        <input type="email" id="email" name="email" autocomplete="email" required><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" autocomplete="current-password" required><br>

        <button type="submit">Login</button>
    </form>
</main>
<% if (locals.env === 'development') { %>
    <script src="/server/js/pages/login.js" type="module" defer></script>
<% } else { %>
    <script src="/server/js/dist/pages/login.js" type="module" defer></script>
<% } %>