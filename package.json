{
  "name": "express-ts-boilerplate",
  "author": "Hossein Mirian",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoseinmirian/express-ts-boilerplate"
  },
  "engines": {
    "node": "20.16.0"
  },
  "description": "it is a simple express app with typescript setup",
  "type": "module",
  "scripts": {
    "build:js": "rimraf public/server/js/dist && parcel build public/server/js/pages/*.js public/server/js/layout.js --dist-dir public/server/js/dist --no-source-maps --no-content-hash",
    "prestart": "npm run build && rimraf temp-build && npm run build:js",
    "start": "node dist/index.js",
    "test": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.js",
    "clean": "rimraf dist && rimraf .parcel-cache",
    "dev": "nodemon --esm index.ts",
    "lint": "eslint . --fix",
    "prettier": "npx prettier --write **/*.ts",
    "prebuild": "npm run clean && npm run prettier",
    "build": "tsc",
    "migrate:up": "npx migrate-mongo up",
    "migrate:down": "npx migrate-mongo down"
  },
  "keywords": [
    "node",
    "node.js",
    "boilerplate",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "es6",
    "es7",
    "es8",
    "es9",
    "jest",
    "passport",
    "zod",
    "eslint",
    "prettier"
  ],
  "dependencies": {
    "axios": "1.11.0",
    "bcrypt": "6.0.0",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "ejs": "3.1.10",
    "express": "4.21.2",
    "express-ejs-layouts": "2.5.1",
    "express-mongo-sanitize": "2.2.0",
    "express-rate-limit": "7.5.1",
    "express-xss-sanitizer": "2.0.0",
    "helmet": "^8.0.1",
    "jsonwebtoken": "9.0.2",
    "method-override": "3.0.0",
    "migrate-mongo": "12.1.3",
    "mongoose": "8.18.0",
    "morgan": "1.10.1",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "9.25.1",
    "@types/bcrypt": "6.0.0",
    "@types/compression": "1.8.1",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.1",
    "@types/express-ejs-layouts": "2.5.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/method-override": "3.0.0",
    "@types/morgan": "1.9.9",
    "@types/node": "20.17.46",
    "@types/supertest": "6.0.3",
    "concurrently": "9.2.1",
    "dotenv": "17.2.1",
    "eslint": "9.25.1",
    "javascript-obfuscator": "4.1.1",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "parcel": "2.15.4",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "supertest": "7.1.4",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.31.0"
  }
}
